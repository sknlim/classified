#listing_show.row
	.col-md-8.col-md-offset-2
		.panel.panel-default
			.panel-heading.listing_image
				= image_tag @listing.image.url
			.panel-body
				%h1= @listing.title
				%p.description= @listing.description
			.panel-footer
				.row
					.col-md-6
						%p.user
							Submitted by
							= @listing.user.name

					.col-md-6
						.btn-group.pull-right
							= link_to like_listing_path(@listing), method: :put, class: "btn btn-default" do
								%span.glyphicon.glyphicon-heart
								= @listing.get_upvotes.size
							- if user_signed_in?
								= link_to "Edit", edit_listing_path, class: "btn btn-default"
								= link_to "Delete", listing_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"